generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Profile {
  id Int      @id @default(autoincrement())
  firstname String 
  lastname String 
  job_title String @default("")
  years_of_experience Int?
  competences Competence[] 
  certs Cert[]
  diplomas Diploma[]
  projects Project[]
  // languages String[]
  // references Reference[]
}

model Competence {
  id Int      @id @default(autoincrement())
  name String
  tools_list Tool[]
  profileId Int
  profile Profile @relation(fields: [profileId], references: [id])
}

model Tool {
  id Int      @id @default(autoincrement())
  name String
  competence   Competence @relation(fields: [competenceId], references: [id])
  competenceId Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  projectId Int
}


model Cert {
  id Int      @id @default(autoincrement())
  name String
  completion_year DateTime 
  profileId Int
  profile Profile @relation(fields: [profileId], references: [id])
}

model Diploma {
  id Int      @id @default(autoincrement())
  graduation_year DateTime
  name String
  source String
  profileId Int
  profile Profile @relation(fields: [profileId], references: [id])
}


//n-n relationship
model Project {
  id Int      @id @default(autoincrement())
  name String
  tools_list Tool[]
  profileId Int
  profile Profile @relation(fields: [profileId], references: [id])
}


